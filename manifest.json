{
  "manifest_version": 2,

  "name": "Youtube Bookmarks Extension",
  "description": "This extension allows you to add bookmarks to YouTube videos",
  "version": "1.0",

  "permissions": ["tabs", "http://*/*", "https://*/*", "<all_urls>", "background"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "css": ["style.css", "bootstrap.min.css"],
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["youtube-bookmarks.js", "jquery-2.2.0.min.js"],

  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
  }
}
